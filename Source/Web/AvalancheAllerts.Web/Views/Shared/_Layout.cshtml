@using AvalancheAllerts.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AvalancheAllerts</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("AvalancheAllerts", "Index", "Home", new { area = string.Empty }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = string.Empty }, null)</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("New Organisation", "Create", "Organisations", new { area = string.Empty }, null)</li>
                        <li>@Html.ActionLink("Submit Test", "Create", "Tests", new { area = string.Empty }, null)</li>
                        <li>@Html.ActionLink("Organisations", "Index", "Organisations", new { area = string.Empty }, null)</li>
                        <li>@Html.ActionLink("Send Feedback", "Create", "Feedback", new { area = string.Empty }, null)</li>
                        if (User.IsInRole(GlobalConstants.AdministratorRoleName))
                        {
                            <li>@Html.ActionLink("Feedback", "Index", "FeedbackAdmin", new { area = "Administration" }, null)</li>
                        }

                    }
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - AvalancheAllerts</p>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
